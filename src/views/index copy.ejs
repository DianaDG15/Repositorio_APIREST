    <style>
      body {
        background: #ffc1dc;
        background: linear-gradient(to right, #f8bbea, #fabfda);
      }
      .Estilo1 {font-size: 18px}
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">DAGODI IOT</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Ayuda</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Registros</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Acerca de</a>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>
   
    <div class="container">
        <h1><center>Registro y visualizacion de datos</center></h1>
        <br>
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                          <label for="InputTemp">Temperatura: </label>
                          <input type="text" class="form-control" name="Temperatura" placeholder="Ingresa ºC Temperatura">
                        </div>
                        <div class="form-group">
                            <label for="InputTemp">Humedad: </label>
                            <input type="text" class="form-control" name="Humedad"  placeholder="Ingresa % Humedad">
                        </div>
                        <div class="form-group">
                            <label for="InputTemp">Distancia: </label>
                            <input type="text" class="form-control" name="Distancia" placeholder="Ingresa Distancia en cm">
                        </div>
                        <div class="form-group">
                            <label for="InputTemp">Crecimiento: </label>
                            <input type="text" class="form-control" name="Crecimiento" placeholder="Ingresa Crecimiento en cm">
                        </div>
                        <div class="form-group">
                            <label for="InputTemp">Fecha: </label>
                            <input type="date" class="form-control" name="Fecha">
                        </div>

                        <div style="text-align:center">  
                          <button type="submit" class="btn btn-success">Guardar</button>
                        </div>

                      </form>
                </div>
            </div>
        </div> <br>
        </div>
      </div>  
      <!-- table-->
      <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <!-- table-bordered para remarcar el borde-->
              <table class="table table-bordered table-hover">
                <thead>
                  <!-- Añade color al los encabezados-->
                    <tr bgcolor= "00BFFF">
                        <th><center>No.</center></th>
                        <th><center>Temperatura</center></th>
                        <th><center>Humedad</center></th>
                        <th><center>Distancia</center></th>
                        <th><center>Crecimiento</center></th>
                        <th><center>Fecha</center></th>
                    </tr>
                </thead>
                <tbody>
                  <!-- mostrar datos mediante for-->
                  <!-- <%= %> equivale a php en java-->
                  <!--recorre i y se detiene cuando i sea menor a coleccion e incrementara i el contador-->
                    <% for(var i = 0; i< coleccion.length; i++){ %>
                        <tr bgcolor= "#E0FFFF">
                            <td><center> <%= i+1 %> </center></td> <!--contador de registros-->
                            <!-- genera el registro de los 
                              datos del documento en mongo de acuerdo a sus variables-->
                            <td><center> <%= coleccion[i].Temperatura %>  </center></td>
                            <td><center> <%= coleccion[i].Humedad %> </center></td>
                            <td><center> <%= coleccion[i].Distancia %> </center></td>
                            <td><center> <%= coleccion[i].Crecimiento %> </center></td>
                            <td><center> <%= coleccion[i].Fecha %>  </center></td>
                        </tr>
                   <% } %>
                </tbody>
    </table>
            </div>
          </div>
        </div>

    </div>
</body>



</html>